# AgentWire Portal - Web UI, Session Orchestrator, and STT
# Multi-arch: linux/amd64, linux/arm64

FROM python:3.11-slim

ENV DEBIAN_FRONTEND=noninteractive

# Install system dependencies
RUN apt-get update && apt-get install -y \
    tmux \
    git \
    ssh \
    openssh-server \
    jq \
    curl \
    ffmpeg \
    && apt-get clean && apt-get autoremove -y

WORKDIR /app

# Upgrade pip
RUN python3 -m pip install --upgrade pip

# Copy package files
COPY pyproject.toml README.md LICENSE ./
COPY agentwire/ ./agentwire/

# Install AgentWire package with STT dependencies
RUN pip install --no-cache-dir -e ".[stt]"

# Download Whisper model at build time (reduces cold start)
ARG WHISPER_MODEL=base
ENV WHISPER_MODEL=${WHISPER_MODEL}
RUN python3 -c "from faster_whisper import WhisperModel; WhisperModel('${WHISPER_MODEL}', device='cpu')" || \
    echo "Warning: Model download failed, will retry at runtime"

# Copy entrypoint script
COPY scripts/portal-entrypoint.sh /entrypoint.sh
RUN chmod +x /entrypoint.sh

# Create directories for volumes
RUN mkdir -p /root/.agentwire /root/.ssh /projects

# Configure SSH for host.docker.internal (accessing host from container)
RUN echo "Host host.docker.internal" >> /etc/ssh/ssh_config && \
    echo "  StrictHostKeyChecking no" >> /etc/ssh/ssh_config && \
    echo "  UserKnownHostsFile /dev/null" >> /etc/ssh/ssh_config

# Setup SSH server for remote access
RUN mkdir -p /run/sshd && \
    echo "PermitRootLogin prohibit-password" >> /etc/ssh/sshd_config && \
    echo "PubkeyAuthentication yes" >> /etc/ssh/sshd_config

# SSH will use mounted keys from /root/.ssh/authorized_keys
EXPOSE 22

# Expose portal and STT ports
EXPOSE 8765 8100

# Health check (portal only - STT starts after portal)
HEALTHCHECK --interval=30s --timeout=5s --start-period=30s --retries=3 \
    CMD curl -k -f https://localhost:8765/health || exit 1

# Set environment
ENV PYTHONUNBUFFERED=1

# Use entrypoint script to run portal in tmux session
ENTRYPOINT ["/entrypoint.sh"]
